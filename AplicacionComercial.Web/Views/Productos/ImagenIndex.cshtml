@model IEnumerable<AplicacionComercial.Common.Entities.ImagenProducto>

@{
    ViewData["Title"] = "Index";
}

<link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" />
<h1>Index</h1>
<br />
<p>
    <a asp-action="Create" class="btn btn-primary"><i class="fa fa-plus"></i>Nuevo</a>
</p>
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Imagenes Producto</h3>
            </div>
            <div class="panel-body">
                <table class="table table table-hover" id="MyTable">
                    <thead>
                        <tr>                            
                            <th>
                                @Html.DisplayNameFor(model => model.ImageFullPath)
                            </th>
                            

                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                
                                <td>
                                    <img src="@item.ImageFullPath" style="width:150px;height:150px;max-width: 100%; height: auto;" />
                                </td>                              

                                <td>
                                    

                                    <!-- <a asp-action="Delete" asp-route-id="/*@item.Id*/"></a>-->
                                    <button data-id="@item.Id" class="btn btn-danger deleteItem"
                                            data-toggle="modal" data-target="#deleteDialog">
                                        <i class="fa fa-trash"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<partial name="_DeleteDialog" />
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script src="/js/deleteDialog.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#MyTable').DataTable();

            // Delete item25
            sc_deleteDialog.openModal('deleteItem', true, 'btnYesDelete', '/Productos/ImagenDelete/',
                false);
        });
    </script>
}
