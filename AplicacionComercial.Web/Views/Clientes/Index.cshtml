@model IEnumerable<AplicacionComercial.Web.Data.Entities.Cliente>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-primary"><i class="fa fa-plus"></i>Nuevo</a>
</p>
<<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Clientes</h3>
            </div>
            <div class="panel-body">
                <table class="table table table-hover" id="MyTable">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.IdtipoDocumento)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Documento)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.NombreComercial)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.NombresContacto)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ApellidosContacto)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Direccion)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CodPostal)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Poblacion)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Provincia)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Movil)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Telefono)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Correo)
                            </th>                         
                            <th>
                                @Html.DisplayNameFor(model => model.Notas)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Aniversario)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Activo)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IdtipoDocumento)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Documento)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NombreComercial)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NombresContacto)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ApellidosContacto)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Direccion)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CodPostal)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Poblacion)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Provincia)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Movil)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Telefono)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Correo)
                                </td>                                
                                <td>
                                    @Html.DisplayFor(modelItem => item.Notas)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Aniversario)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Activo)
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-pencil-alt"></i></a>
                                    <a asp-action="Details" asp-route-id="@item.Id"><i class="fa fa-pencil-alt"></i></a> |
                                    <button data-id="@item.Id" class="btn btn-danger deleteItem"
                                            data-toggle="modal" data-target="#deleteDialog">
                                        <i class="fa fa-trash"></i>
                                    </button>
                                </td>
                            </tr>
                         }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<partial name="_DeleteDialog" />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script src="/js/deleteDialog.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#MyTable').DataTable();

            // Delete item25
            sc_deleteDialog.openModal('deleteItem', true, 'btnYesDelete', '/Clientes/Delete/',
                false);
        });
    </script>
}
